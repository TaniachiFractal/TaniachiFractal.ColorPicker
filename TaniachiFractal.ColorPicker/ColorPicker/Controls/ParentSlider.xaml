<local:HSLControl x:Class="TaniachiFractal.ColorPicker.ColorPicker.Controls.ParentSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaniachiFractal.ColorPicker.ColorPicker.Controls"
                  d:DataContext="{d:DesignInstance Type=local:ParentSlider}"
                  mc:Ignorable="d"
                  MouseDown="HSLControl_MouseDown"
                  MouseUp="HSLControl_MouseUp"
                  MouseMove="HSLControl_MouseMove"
                  Loaded="HSLControl_Loaded" >
    <Grid>
        <Rectangle Height="10"
                   Width="255"
                   RadiusX="5"
                   RadiusY="5">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{Binding Image}" />
            </Rectangle.Fill>
        </Rectangle>
        <Canvas>
            <local:HSLCircle x:Name="Slider"
                             Width="20"
                             Height="20"
                             Canvas.Top="-5" />
        </Canvas>
    </Grid>
</local:HSLControl>
