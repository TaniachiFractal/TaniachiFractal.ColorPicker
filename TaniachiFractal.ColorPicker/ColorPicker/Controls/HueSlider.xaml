<local:HSLControl x:Class="TaniachiFractal.ColorPicker.ColorPicker.Controls.HueSlider"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:TaniachiFractal.ColorPicker.ColorPicker.Controls"
                  d:DataContext="{d:DesignInstance Type=local:HueSlider}"
                  mc:Ignorable="d"
                  MouseDown="UserControl_MouseDown"
                  MouseUp="UserControl_MouseUp"
                  MouseMove="UserControl_MouseMove"
                  Loaded="HSLControl_Loaded"
                  Height="10"
                  Width="255"
                  >
    <UserControl.Resources>
        <BitmapImage x:Key="HueStickPNG"
                     UriSource="../Graphics/HueStick.PNG" />
    </UserControl.Resources>
    <Grid>
        <Rectangle Height="10"
                   Width="255"
                   RadiusX="5"
                   RadiusY="5">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{StaticResource HueStickPNG}" />
            </Rectangle.Fill>
        </Rectangle>
        <Canvas>
            <local:HSLCircle x:Name="Slider" Width="20" Height="20" Canvas.Top="-5"/>
        </Canvas>
    </Grid>
</local:HSLControl>
