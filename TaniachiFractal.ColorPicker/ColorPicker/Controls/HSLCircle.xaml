<local:HSLControl x:Class="TaniachiFractal.ColorPicker.ColorPicker.Controls.HSLCircle"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:TaniachiFractal.ColorPicker.ColorPicker.Controls"
                  xmlns:conv="clr-namespace:TaniachiFractal.ColorPicker.ColorPicker.ValueConverters"
                  d:DataContext="{d:DesignInstance Type=local:HSLCircle}"
                  mc:Ignorable="d"
                  Loaded="HSLControl_Loaded">
    <UserControl.Resources>
        <conv:LightnessSWMConverter x:Key="LighnessSWMConverter" />
    </UserControl.Resources>
    <Grid>
        <Ellipse Fill="Cyan"
                 Margin="1" />
        <Ellipse x:Name="ColorCircle"
                 Fill="{Binding Brush}"
                 Stroke="{Binding Lightness, Converter={StaticResource LighnessSWMConverter}}" />
    </Grid>
</local:HSLControl>