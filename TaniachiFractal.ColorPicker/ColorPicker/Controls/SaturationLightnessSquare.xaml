<local:HSLControl x:Class="TaniachiFractal.ColorPicker.ColorPicker.Controls.SaturationLightnessSquare"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:TaniachiFractal.ColorPicker.ColorPicker.Controls"
                  xmlns:conv="clr-namespace:TaniachiFractal.ColorPicker.ColorPicker.ValueConverters"
                  d:DataContext="{d:DesignInstance Type=local:SaturationLightnessSquare}"
                  mc:Ignorable="d"
                  Height="128"
                  Width="128"
                  MouseDown="UserControl_MouseDown"
                  MouseUp="UserControl_MouseUp"
                  MouseMove="UserControl_MouseMove"
                  Loaded="HSLControl_Loaded">
    <UserControl.Resources>
        <conv:HueSWMBrushConverter x:Key="HueSWMBrushConverter" />
    </UserControl.Resources>
    <Grid>

        <Rectangle x:Name="HueBackground"
                   Fill="{Binding Hue, Converter={StaticResource HueSWMBrushConverter}}" />

        <Image Source="/ColorPicker/Graphics/SaturationLightnessSquare.png"
               Stretch="Fill"
               Margin="-1" />

        <Canvas>
            <local:ColorSlider Canvas.Left="{Binding X}"
                               Canvas.Top="{Binding Y}" />
        </Canvas>
    </Grid>
</local:HSLControl>