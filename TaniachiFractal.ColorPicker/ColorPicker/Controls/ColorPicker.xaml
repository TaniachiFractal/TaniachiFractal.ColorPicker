<local:HSLControl x:Class="TaniachiFractal.ColorPicker.ColorPicker.Controls.ColorPicker"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:TaniachiFractal.ColorPicker.ColorPicker.Controls"
                  d:DataContext="{d:DesignInstance Type=local:ColorPicker}"
                  mc:Ignorable="d"
                  d:DesignHeight="450"
                  d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Grid>
                <local:SaturationLightnessSquare x:Name="SLS"
                                                 Saturation="255"
                                                 Lightness="128" />
                <local:HueWheel x:Name="HW"
                                Hue="0" />
            </Grid>
        </StackPanel>
    </Grid>
</local:HSLControl>
