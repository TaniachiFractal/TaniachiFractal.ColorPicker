<Window x:Class="TaniachiFractal.ColorPicker.TestShowcaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaniachiFractal.ColorPicker"
        xmlns:cont="clr-namespace:TaniachiFractal.ColorPicker.ColorPicker.Controls"
        mc:Ignorable="d"
        FontFamily="Bahnschrift"
        FontSize="20"
        Height="512"
        Width="512"
        ResizeMode="NoResize"
        Title="Check out this nifty color picker by Taniachi Fractal!"
        Icon="/favicon.ico">
    <Grid>
        <StackPanel>
            <cont:ColorPicker Margin="10"
                              x:Name="ColorPicker"
                              Hue="222"
                              Saturation="255"
                              Lightness="130" />

        </StackPanel>
    </Grid>
</Window>
