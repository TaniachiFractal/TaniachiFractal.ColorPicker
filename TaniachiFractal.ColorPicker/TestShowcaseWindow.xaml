<Window x:Class="TaniachiFractal.ColorPicker.TestShowcaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaniachiFractal.ColorPicker"
        xmlns:cont="clr-namespace:TaniachiFractal.ColorPicker.ColorPicker.Controls"
        mc:Ignorable="d"
        Height="512"
        Width="512"
        ResizeMode="NoResize"
        Title="Check out this nifty color picker by Taniachi Fractal!"
        Icon="/favicon.ico">
    <Grid>
        <cont:SaturationLightnessSquare Hue="228"
                                        Width="128"
                                        Height="128"
                                        x:Name="SatLitSqr" />
        <StackPanel HorizontalAlignment="Left"
                    VerticalAlignment="Top">
            <Label Name="HueLabel"
                   Content="Hue" />
            <Label Name="SatLabel"
                   Content="Sat" />
            <Label Name="LitLabel"
                   Content="Lit" />
        </StackPanel>
    </Grid>
</Window>
